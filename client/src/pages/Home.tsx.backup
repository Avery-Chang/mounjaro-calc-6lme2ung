import { useState, useMemo, useEffect } from "react";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { Button } from "@/components/ui/button";
import {
  Collapsible,
  CollapsibleContent,
  CollapsibleTrigger,
} from "@/components/ui/collapsible";
import { calculateAllCosts, getBestOption } from "@/lib/calculator";
import { getSpecifications } from "@/lib/specifications";
import BestOptionCard from "@/components/BestOptionCard";
import CostComparisonChart from "@/components/CostComparisonChart";
import CostPerMgChart from "@/components/CostPerMgChart";
import CostPer01mlChart from "@/components/CostPer01mlChart";
import ResultsTable from "@/components/ResultsTable";
import { Syringe, Calculator, Info, ChevronDown, Settings } from "lucide-react";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { Link } from "wouter";

export default function Home() {
  const [targetDose, setTargetDose] = useState<string>("5");
  const [specifications, setSpecifications] = useState(getSpecifications());
  const [isTableOpen, setIsTableOpen] = useState(false);

  const targetMg = useMemo(() => {
    const value = parseFloat(targetDose);
    return isNaN(value) || value <= 0 ? 0 : value;
  }, [targetDose]);

  // 監聽 storage 變化，當價格更新時重新載入
  useEffect(() => {
    const handleStorageChange = () => {
      setSpecifications(getSpecifications());
    };
    window.addEventListener("storage", handleStorageChange);
    // 也監聽自定義事件（同一頁面內的更新）
    window.addEventListener("pricesUpdated", handleStorageChange);
    
    // 頁面載入時檢查一次
    setSpecifications(getSpecifications());
    
    return () => {
      window.removeEventListener("storage", handleStorageChange);
      window.removeEventListener("pricesUpdated", handleStorageChange);
    };
  }, []);

  const results = useMemo(
    () => calculateAllCosts(targetMg, specifications),
    [targetMg, specifications]
  );
  
  const bestOption = useMemo(
    () => getBestOption(targetMg, specifications),
    [targetMg, specifications]
  );

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
      {/* Header */}
      <header className="border-b bg-white/80 backdrop-blur-sm sticky top-0 z-10">
        <div className="container py-6">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-3">
              <div className="p-2 bg-primary/10 rounded-lg">
                <Syringe className="w-8 h-8 text-primary" />
              </div>
              <div>
                <h1 className="text-3xl font-bold text-gray-900">猛健樂劑量成本計算器</h1>
                <p className="text-sm text-muted-foreground">
                  Mounjaro (Tirzepatide) Cost Calculator - 以 0.1mL 為最小單位精確計算
                </p>
              </div>
            </div>
            <Link href="/settings">
              <Button variant="outline" className="gap-2">
                <Settings className="w-4 h-4" />
                價格設定
              </Button>
            </Link>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main className="container py-8">
        <div className="grid gap-6">
          {/* Input Section */}
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Calculator className="w-5 h-5" />
                輸入目標劑量
              </CardTitle>
              <CardDescription>
                請輸入您需要的猛健樂劑量（毫克），系統將自動計算最經濟的購買方案
              </CardDescription>
            </CardHeader>
            <CardContent>
              <div className="max-w-md">
                <Label htmlFor="targetDose" className="text-base">
                  目標劑量 (mg)
                </Label>
                <Input
                  id="targetDose"
                  type="number"
                  min="0"
                  step="0.1"
                  value={targetDose}
                  onChange={(e) => setTargetDose(e.target.value)}
                  className="mt-2 text-lg h-12"
                  placeholder="例如：5"
                />
                <p className="text-sm text-muted-foreground mt-2">
                  常見劑量：2.5mg、5mg、7.5mg、10mg、12.5mg、15mg
                </p>
              </div>
            </CardContent>
          </Card>

          {/* Info Alert */}
          <Alert>
            <Info className="h-4 w-4" />
            <AlertTitle>計算說明</AlertTitle>
            <AlertDescription>
              本計算器以 <strong>0.1mL 為最小計量單位</strong>，根據 2025 年 10 月 1 日後的價格進行計算。
              每支筆的可用容量為 2.4mL，標準注射量為 0.6mL。系統會自動比較所有規格，
              找出總成本最低且浪費最少的最佳方案。
            </AlertDescription>
          </Alert>

          {/* Results Section */}
          {targetMg > 0 && bestOption && (
            <>
              {/* Best Option Card */}
              <BestOptionCard result={bestOption} targetMg={targetMg} />

              {/* Charts and Table */}
              <Tabs defaultValue="comparison" className="w-full">
                <TabsList className="grid w-full grid-cols-4">
                  <TabsTrigger value="comparison">規格比較</TabsTrigger>
                  <TabsTrigger value="permg">每 mg 成本</TabsTrigger>
                  <TabsTrigger value="per01ml">每 0.1mL 成本</TabsTrigger>
                  <TabsTrigger value="table">詳細數據</TabsTrigger>
                </TabsList>

                <TabsContent value="comparison" className="mt-6">
                  <Card>
                    <CardHeader>
                      <CardTitle>規格比較分析</CardTitle>
                      <CardDescription>
                        比較各規格的每 mg 成本，滑鼠移到圖表上可查看該規格每支筆 2.4mL 可施打 {targetMg}mg 的次數。
                      </CardDescription>
                    </CardHeader>
                    <CardContent>
                      <CostComparisonChart results={results} targetMg={targetMg} />
                    </CardContent>
                  </Card>
                </TabsContent>

                <TabsContent value="per01ml" className="mt-6">
                  <Card>
                    <CardHeader>
                      <CardTitle>每 0.1mL 成本比較</CardTitle>
                      <CardDescription>
                        比較不同規格的每 0.1mL 單位成本，幫助您了解不同規格的容量成本差異。
                      </CardDescription>
                    </CardHeader>
                    <CardContent>
                      <CostPer01mlChart results={results} />
                    </CardContent>
                  </Card>
                </TabsContent>

                <TabsContent value="permg" className="mt-6">
                  <Card>
                    <CardHeader>
                      <CardTitle>每 mg 成本比較</CardTitle>
                      <CardDescription>
                        比較不同規格的每毫克成本效益，幫助您找到最經濟的購買選擇。
                      </CardDescription>
                    </CardHeader>
                    <CardContent>
                      <CostPerMgChart results={results} />
                    </CardContent>
                  </Card>
                </TabsContent>

                <TabsContent value="table" className="mt-6">
                  <Card>
                    <CardHeader>
                      <CardTitle>完整計算結果</CardTitle>
                      <CardDescription>
                        所有規格的詳細成本分析數據，按總成本由低至高排序
                      </CardDescription>
                    </CardHeader>
                    <CardContent>
                      <ResultsTable results={results} />
                    </CardContent>
                  </Card>
                </TabsContent>
              </Tabs>

              {/* Collapsible Specifications Table */}
              <Collapsible open={isTableOpen} onOpenChange={setIsTableOpen}>
                <Card>
                  <CollapsibleTrigger asChild>
                    <CardHeader className="cursor-pointer hover:bg-muted/50 transition-colors">
                      <div className="flex items-center justify-between">
                        <div>
                          <CardTitle>規格價格總覽</CardTitle>
                          <CardDescription>
                            查看所有猛健樂規格的詳細資訊與當前價格
                          </CardDescription>
                        </div>
                        <ChevronDown
                          className={`w-5 h-5 transition-transform ${
                            isTableOpen ? "rotate-180" : ""
                          }`}
                        />
                      </div>
                    </CardHeader>
                  </CollapsibleTrigger>
                  <CollapsibleContent>
                    <CardContent>
                      <div className="rounded-md border overflow-x-auto">
                        <table className="w-full min-w-[900px]">
                          <thead className="bg-muted/50">
                            <tr>
                              <th className="px-4 py-3 text-left font-medium w-[140px]">規格</th>
                              <th className="px-4 py-3 text-right font-medium w-[100px]">每支筆<br />含量</th>
                              <th className="px-4 py-3 text-right font-medium w-[100px]">可用<br />容量</th>
                              <th className="px-4 py-3 text-right font-medium w-[110px]">每 0.1mL<br />含量</th>
                              <th className="px-4 py-3 text-right font-medium w-[120px]">價格</th>
                              <th className="px-4 py-3 text-right font-medium w-[110px]">每 0.1mL<br />價格</th>
                              <th className="px-4 py-3 text-right font-medium w-[110px]">每 mg<br />價格</th>
                            </tr>
                          </thead>
                          <tbody>
                            {specifications.map((spec, index) => {
                              const isBest = bestOption && spec.label === bestOption.specification.label;
                              return (
                              <tr
                                key={spec.label}
                                className={isBest ? "bg-primary/10 border-l-4 border-primary" : (index % 2 === 0 ? "bg-background" : "bg-muted/20")}
                              >
                                <td className="px-4 py-3 font-medium">{spec.label}</td>
                                <td className="px-4 py-3 text-right">{spec.totalMg} mg</td>
                                <td className="px-4 py-3 text-right">{spec.totalMl} mL</td>
                                <td className="px-4 py-3 text-right">
                                  {spec.mgPer01ml.toFixed(2)} mg
                                </td>
                                <td className="px-4 py-3 text-right font-semibold">
                                  NT$ {spec.price.toLocaleString()}
                                </td>
                                <td className="px-4 py-3 text-right">
                                  NT$ {(spec.price / 24).toFixed(2)}
                                </td>
                                <td className="px-4 py-3 text-right">
                                  NT$ {(spec.price / spec.totalMg).toFixed(2)}
                                </td>
                              </tr>
                            );
                            })}
                          </tbody>
                        </table>
                      </div>
                      <div className="mt-4 flex justify-end">
                        <Link href="/settings">
                          <Button variant="outline" size="sm" className="gap-2">
                            <Settings className="w-4 h-4" />
                            調整規格價格
                          </Button>
                        </Link>
                      </div>
                    </CardContent>
                  </CollapsibleContent>
                </Card>
              </Collapsible>
            </>
          )}

          {targetMg === 0 && (
            <Card className="border-dashed">
              <CardContent className="flex flex-col items-center justify-center py-12 text-center">
                <Calculator className="w-16 h-16 text-muted-foreground mb-4" />
                <h3 className="text-lg font-semibold mb-2">請輸入目標劑量</h3>
                <p className="text-muted-foreground max-w-md">
                  在上方輸入框中輸入您需要的猛健樂劑量（毫克），系統將立即為您計算最經濟的購買方案。
                </p>
              </CardContent>
            </Card>
          )}
        </div>
      </main>

      {/* Footer */}
      <footer className="border-t bg-white/80 backdrop-blur-sm mt-12">
        <div className="container py-6 text-center text-sm text-muted-foreground">
          <p>
            本計算器僅供參考，實際用藥請遵循醫師處方。價格以 2025 年 10 月 1 日後為準。
          </p>
        </div>
      </footer>
    </div>
  );
}

